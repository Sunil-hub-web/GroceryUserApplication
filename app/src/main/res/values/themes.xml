<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroceryUserApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/blue_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="font">@font/poppins_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NavigationStyle">
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/fifty_five_dp</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:textSize">@dimen/twelve_sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>