<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.DeliveryAgentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:padding="@dimen/ten_dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_fifty_dp"
        android:background="@color/blue_primary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="@dimen/one_hundred_dp"
            android:background="@drawable/white_logo"/>

        <LinearLayout
            android:padding="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driverNameTv"
                android:textSize="@dimen/eighteen_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Driver Name here"/>

            <TextView
                android:id="@+id/driverMobileTv"
                android:textSize="@dimen/fourteen_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:text="Number"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

</LinearLayout>