<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/ten_dp"
    android:layout_marginEnd="@dimen/ten_dp"
    android:layout_marginTop="@dimen/five_dp"
    android:layout_marginBottom="@dimen/five_dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/four_dp"
    app:cardCornerRadius="@dimen/five_dp"
    android:layout_height="@dimen/one_two_five_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/prodImg"
            android:layout_width="@dimen/hundred_three_dp"
            android:layout_height="@dimen/ninety_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            app:srcCompat="@drawable/potato" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_like" />

        <TextView
            android:layout_toEndOf="@id/prodImg"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/productName"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:text="This is sample product that I know" />

        <TextView
            android:layout_below="@id/productName"
            android:layout_toEndOf="@id/prodImg"
            android:textColor="#3A3A3A"
            android:textSize="@dimen/eighteen_sp"
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:text="TextView" />

        <Button
            android:textColor="@color/white"
            android:layout_toEndOf="@id/prodImg"
            android:layout_below="@id/productPrice"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/fifteen_sp"
            android:id="@+id/addToCart"
            android:layout_width="@dimen/one_six_eight_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:text="Add to Cart"
            android:textAllCaps="false"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
