<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/ten_dp"
    android:id="@+id/rootView"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catImage"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/ninety_dp"
        android:layout_height="@dimen/ninety_dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:scaleType="centerInside"
        android:background="@drawable/dashboard_category_white_outline"
        android:src="@drawable/ic_home_made_products_01"/>

    <TextView
        android:layout_below="@id/catImage"
        android:layout_marginTop="@dimen/ten_dp"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/catName"
        android:layout_width="@dimen/ninety_dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Category name"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>